{
    "name": "codesoup/metabox-schema",
    "description": "Drop-in schema-based form field renderer and validator. Define your fields once, programatically render forms and validate data all at once.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "form",
        "schema",
        "validation",
        "renderer",
        "wordpress",
        "metabox"
    ],
    "homepage": "https://github.com/code-soup/metabox-schema",
    "support": {
        "issues": "https://github.com/code-soup/metabox-schema/issues",
        "source": "https://github.com/code-soup/metabox-schema"
    },
    "authors": [
        {
            "name": "Code Soup",
            "email": "hi@codesoup.co"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "archive": {
        "exclude": [
            "/examples"
        ]
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3.1",
        "php-parallel-lint/php-console-highlighter": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        },
        "platform": {
            "php": "8.1.0"
        }
    },
    "scripts": {
        "lint": "@php ./vendor/bin/parallel-lint . -e php --show-deprecated --exclude vendor --exclude .git",
        "lint:phpcs": "vendor/bin/phpcs",
        "lint:phpcbf": "vendor/bin/phpcbf"
    },
    "scripts-descriptions": {
        "lint": "Lint PHP files against parse errors",
        "lint:phpcs": "Analyze code against WordPress coding standards",
        "lint:phpcbf": "Fix coding standards warnings/errors automatically"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
