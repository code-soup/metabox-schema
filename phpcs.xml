<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
    <!-- See https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
    <!-- See https://github.com/WordPress/WordPress-Coding-Standards -->
    <!-- See https://github.com/PHPCompatibility/PHPCompatibilityWP -->

    <!-- Set a description for this ruleset. -->
    <description>A custom set of code standard rules to check for WordPress.</description>

    <!--
    #############################################################################
    COMMAND LINE ARGUMENTS
    https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml
    #############################################################################
    -->

    <!-- Pass some flags to PHPCS:
         p flag: Show progress of the run.
         s flag: Show sniff codes in all reports.
    -->
    <arg value="ps"/>

    <!-- Whenever possible, cache the scan results and re-use those for unchanged files on the next scan. -->
    <arg name="cache" value=".phpcs.cache"/>

    <!-- Set the memory limit to 256M.
        For most standard PHP configurations, this means the memory limit will temporarily be raised.
        Ref: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Advanced-Usage#specifying-phpini-settings
    -->
    <ini name="memory_limit" value="256M"/>

    <!-- Strip the filepaths down to the relevant bit. -->
    <arg name="basepath" value="./"/>

  <!-- Check up to 8 files simultaneously. -->
    <arg name="parallel" value="75"/>

    <arg name="colors"/>

    <!-- Check PHP files only. JavaScript and CSS files are checked separately using the @wordpress/scripts package. -->
    <arg name="extensions" value="php"/>

    <!-- Check all files in this directory and the directories below it. -->
    <file>.</file>

    <!-- Exclude patterns. -->
    <exclude-pattern>/agent-skills/*</exclude-pattern>
    <exclude-pattern>/examples/*</exclude-pattern>
    <exclude-pattern>/includes/fields/*</exclude-pattern>
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>*.md</exclude-pattern>
    <exclude-pattern>*.json</exclude-pattern>
    <exclude-pattern>*.xml</exclude-pattern>

    <!--
    #############################################################################
    USE THE WordPress AND THE Theme Review RULESET
    #############################################################################
    -->

    <rule ref="WordPress">
        <!-- Exclude rules that don't apply to this package -->

        <!-- Allow vendor namespaces (not WordPress prefixes) -->
        <exclude name="WordPress.NamingConventions.PrefixAllGlobals.NonPrefixedNamespaceFound"/>

        <!-- Allow error suppression for intentional cases (e.g., preg_match validation) -->
        <exclude name="WordPress.PHP.NoSilencedErrors.Discouraged"/>

        <!-- Schema data is hardcoded by developers, not user input -->
        <!-- Templates are already excluded via exclude-pattern -->
        <!-- Remaining escape warnings in class files are for validated/hardcoded data -->
    </rule>

    <!-- Set the minimum supported WP version. This is used by several sniffs.
         The minimum version set here should be in line with the minimum WP version
         as set in the "Requires at least" tag in the readme.txt file. -->
    <config name="minimum_supported_wp_version" value="6.0"/>

    <rule ref="WordPress.Arrays.MultipleStatementAlignment">
        <properties>
            <!-- No need to adjust alignment of large arrays when the item with the largest key is removed. -->
            <property name="exact" value="false"/>
            <!-- Don't align multi-line items if ALL items in the array are multi-line. -->
            <property name="alignMultilineItems" value="!=100"/>
            <!-- Array assignment operator should always be on the same line as the array key. -->
            <property name="ignoreNewlines" value="false"/>
        </properties>
    </rule>

    <!--
    #############################################################################
    USE THE PHPCompatibility RULESET
    #############################################################################
    -->

    <config name="testVersion" value="8.1-"/>
    <rule ref="PHPCompatibilityWP"/>

</ruleset>
